<UserControl x:Class="EasyJob_ProDG.UI.View.User_Controls.TabMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyJob_ProDG.UI.View.UI"
             xmlns:cc="clr-namespace:CustomControlLib;assembly=CustomControlLib"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:ub="clr-namespace:EasyJob_ProDG.UI.Behaviors"
             xmlns:attachedProperties="clr-namespace:EasyJob_ProDG.UI.View.AttachedProperties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             DataContext="{Binding OwnShip}">
    <Grid 
        attachedProperties:EnterKeyTraversal.IsEnabled="true"
        Margin="10">

        <Grid.Resources>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxWithTag}">
                <Setter Property="Width" Value="120"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment"
                    Value="Center" />
                <Setter Property="TextAlignment"
                    Value="Center" />
                <Setter Property="TextWrapping" Value="NoWrap"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition Width="10*"
                              MinWidth="150"></ColumnDefinition>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--Profile name-->
        <Label x:Name="labelProfileName"
               Content="Profile name"
               Grid.Column="0"
               Grid.Row="0" />
        <TextBox x:Name="txbProfileName"
                 IsEnabled="False"
                 Tag="Enter new profile name"
                 Text="{Binding ProfileName, Mode=OneWay}"
                 Grid.Column="1"
                 Grid.Row="0"
                 TabIndex="0">
            <i:Interaction.Behaviors>
                <ub:SelectTextOnFocusBehavior />
            </i:Interaction.Behaviors>
        </TextBox>

        <!--Ship name-->
        <Label x:Name="labelShipName"
               Content="Ship name"
               Grid.Column="0"
               Grid.Row="1" />
        <TextBox x:Name="txbShipName"
                 Tag="Enter Ship name"
                 Text="{Binding ShipName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Column="1"
                 Grid.Row="1"
                 TabIndex="1"
                 GotFocus="txbShipName_GotFocus" />

        <!--Call sign-->
        <Label x:Name="labelCallSign"
               Content="Call sign"
               Grid.Column="0"
               Grid.Row="2" />
        <TextBox x:Name="txbCallSign"
                 Tag="Enter Call sign"
                 Text="{Binding CallSign, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Column="1"
                 Grid.Row="2"
                 TabIndex="2"/>

        <!--Passenger ship-->
        <Label x:Name="labelPassenger"
               Content="Passenger ship?"
               Grid.Column="0"
               Grid.Row="3" />
        <RadioButton x:Name="radPassenger"
                     GroupName="rbPassenger"
                     Content="Yes"
                     IsChecked="{Binding Passenger}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Width="52"
                     Height="15"
                     Margin="15,12,0,0"
                     Grid.Column="1"
                     Grid.Row="3"
                     TabIndex="4" />
        <RadioButton x:Name="radNoPassenger"
                     GroupName="rbPassenger"
                     Content="No"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Width="69"
                     Height="15"
                     Margin="70,12,0,0"
                     Grid.ColumnSpan="2"
                     Grid.Column="1"
                     Grid.Row="3" />

        <!--Number of accommodations-->
        <Label x:Name="labelNumberOfSuperstructures"
               Content="Number of superstructures"
               Grid.Column="0"
               Grid.Row="4" />
        <cc:NumericalTextBoxWithButtons Text="{Binding NumberOfSuperstructures}"
                                        MinValue="1"
                                        MaxValue="2"
                                        Grid.Column="1"
                                        Grid.Row="4"
                                        TabIndex="5" 
                                        Margin="25,0"/>

        <!--Row 00-->
        <Label x:Name="labelRow00exists"
               Content="Row '00' exists?"
               Grid.Column="0"
               Grid.Row="5" />
        <RadioButton x:Name="radRow00yes"
                     GroupName="Row00"
                     Content="Yes"
                     IsChecked="{Binding Row00Exists, Mode=TwoWay}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Width="52"
                     Height="15"
                     Margin="15,12,0,0"
                     Grid.Column="1"
                     Grid.Row="5"
                     TabIndex="6" />
        <RadioButton x:Name="radRow00no"
                     GroupName="Row00"
                     Content="No"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Width="69"
                     Height="15"
                     Margin="70,12,0,0"
                     Grid.ColumnSpan="2"
                     Grid.Column="1"
                     Grid.Row="5"/>

        <!--Reefer motor facing-->
        <Label x:Name="labelReeferMotorFacing"
               Content="Reefer motors facing"
               Grid.Column="0"
               Grid.Row="6" />
        <ComboBox x:Name="cmbReefers"
                  ItemsSource="{Binding MotorFacingList}"
                  SelectedIndex="{Binding RfMotor}"
                  IsEditable="False"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Width="120"
                  Margin="2,8,0,0"
                  Grid.Column="1"
                  Grid.Row="6"
                  Focusable="True"
                  TabIndex="7" />

        <!--Number of holds-->
        <Label x:Name="labelNumberOfHolds"
               Content="Number of cargo holds"
               Grid.Column="0"
               Grid.Row="7" />
        <cc:NumericalTextBoxWithButtons Text="{Binding NumberOfHolds}"
                                        MinValue="0"
                                        MaxValue="12"
                                        Grid.Column="1"
                                        Grid.Row="7"
                                        TabIndex="8" 
                                        Margin="25,0"/>
    </Grid>
</UserControl>
