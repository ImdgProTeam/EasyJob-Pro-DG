<UserControl x:Class="EasyJob_ProDG.UI.View.User_Controls.HowToEnterPosition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyJob_ProDG.UI.View.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock TextWrapping="Wrap"
                   Margin="5,15"
                   Grid.ColumnSpan="3">
            Enter the position in a standard format (e.g. "01 00 82"), enter "hold 1" for entire hold, enter "bay 02 underdeck" for entire bay 02 underdeck.
            If your input is recognized by the program, you will be able to add the position.
        </TextBlock>
    </Grid>
</UserControl>
